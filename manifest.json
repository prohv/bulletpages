{
    "manifest_version": 3,
    "name": "BulletPages",
    "version": "1.0",
    "description": "Summarise your webpages the smart way",
    "icons": {
        "48": "icons/bulletpages48-final.png",
        "128": "icons/bulletpages128-final.png"
    },
    "action":{
        "default_popup": "popup.html"
    },
    "permissions": ["scripting", "activeTab", "storage"],
    "content_scripts": [
        {"matches": ["<all_urls>"],
        "js": ["content.js"]}
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "host_permissions": ["<all_urls>"]
}